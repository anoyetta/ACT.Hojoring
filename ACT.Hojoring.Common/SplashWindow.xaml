<Window
  x:Class="ACT.Hojoring.Common.SplashWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:ACT.Hojoring.Common"
  mc:Ignorable="d"
  x:Name="BaseWindow"
  Title="ACT.Hojoring"
  TextOptions.TextFormattingMode="Display"
  TextOptions.TextHintingMode="Animated"
  TextOptions.TextRenderingMode="ClearType"
  RenderOptions.ClearTypeHint="Enabled"
  RenderOptions.BitmapScalingMode="HighQuality"
  RenderOptions.EdgeMode="Unspecified"
  Topmost="True"
  AllowsTransparency="True"
  WindowStyle="None"
  ShowInTaskbar="False"
  Background="Transparent"
  Height="200"
  Width="500"
  WindowStartupLocation="CenterScreen">

  <Window.Resources>
    <SolidColorBrush x:Key="MainColor" Color="DarkOrchid" />
    <FontFamily x:Key="Font">Comic Sans MS</FontFamily>
  </Window.Resources>

  <Window.LayoutTransform>
    <ScaleTransform
      ScaleX="0.8"
      ScaleY="0.8" />
  </Window.LayoutTransform>

  <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Label x:Name="Dummy" Background="{StaticResource MainColor}" Visibility="Collapsed" />
    <Grid>
      <Label x:Name="TitleLabel" Content="ACT.Hojoring" Foreground="White" FontFamily="{StaticResource Font}" FontWeight="Black" FontSize="60">
        <Label.Effect>
          <DropShadowEffect
            Opacity="1"
            Direction="0"
            ShadowDepth="0"
            Color="{Binding ElementName=Dummy, Path=Background.Color, Mode=OneWay}"
            BlurRadius="6" />
        </Label.Effect>
      </Label>
      <Label
        Content="{Binding ElementName=TitleLabel, Path=Content, Mode=OneWay}"
        Foreground="{Binding ElementName=TitleLabel, Path=Foreground, Mode=OneWay}"
        FontFamily="{Binding ElementName=TitleLabel, Path=FontFamily, Mode=OneWay}"
        FontWeight="{Binding ElementName=TitleLabel, Path=FontWeight, Mode=OneWay}"
        FontSize="{Binding ElementName=TitleLabel, Path=FontSize, Mode=OneWay}"
        Effect="{Binding ElementName=TitleLabel, Path=Effect, Mode=OneWay}" />
