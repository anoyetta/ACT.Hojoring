        FontWeight="{Binding ElementName=TitleLabel, Path=FontWeight, Mode=OneWay}"
        FontSize="{Binding ElementName=TitleLabel, Path=FontSize, Mode=OneWay}"
        Effect="{Binding ElementName=TitleLabel, Path=Effect, Mode=OneWay}" />
      <Label
