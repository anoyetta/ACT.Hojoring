!include build.info

MECAB_DIC_VERSION=102
MECAB_PACKAGE=\"open_jtalk\"
MECAB_VERSION=\"1.05\"
MECAB_RC=\"dummy\"
HTS_ENGINE_API_INSTALLDIR = C:\hts_engine_API
HTS_ENGINE_LIBRARY = $(HTS_ENGINE_API_INSTALLDIR)\lib\hts_engine_API.lib
HTS_ENGINE_HEADER_DIR = $(HTS_ENGINE_API_INSTALLDIR)\include

CC  = cl
CL  = link
CFLAGS = $(INC) /O2 /Ob2 /Oi /Ot /Oy /GT /GL /TC /EHsc /DCHARSET_$(CHARSET)
LFLAGS = /LTCG /MACHINE:$(PLATFORM)

MECAB_CFLAGS = $(INC) /O2 /Ob2 /Oi /Ot /Oy /GT /GL /TP /EHsc \
/D CHARSET_$(CHARSET) \
/D DIC_VERSION=$(MECAB_DIC_VERSION) \
/D MECAB_WITHOUT_MUTEX_LOCK \
/D MECAB_DEFAULT_RC=$(MECAB_RC) \
/D PACKAGE=$(MECAB_PACKAGE) \
/D VERSION=$(MECAB_VERSION) \
/D HAVE_WINDOWS_H
